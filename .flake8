[flake8]
max_line_length = 100
ignore =
    # line too long - let black handle that
    E501
    # whitespace before ':' - doesn't work well with black
    E203
    # line break occurred before a binary operator - let black worry about that
    W503
    # whitespace before ':' - doesn't work well with black
per-file-ignores =
    **/__init__.py: F401